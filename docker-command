sudo -i
#lets check all the docker command line
  docker
  ###to gather more information about docker machine 
  docker info
#lets create our first container
 18  docker container run --publish 80:80 --detach nginx
   19  docker ps
   20  curl localhost
#lets see the that docker images will show the image in local
 22  docker images
#next time when we create a container it will not download the image. 
   23  docker container run --publish 81:80 --detach nginx
#lets create an apache server 
 27  docker container run --publish 82:80 --detach httpd
   28  docker ps
   29  docker images
###here you will see multple contianer are running
#lets try to undestand the concept of --detach
#if you create a container withoguth detach it will run as foreground process --detach make the container run as deamon process
 docker container run --publish 83:80 httpd
####press ctrl c to close it
###docker ps -a will show all the running and stopped container
docker ps -a
#the default name of the container is showing an dictionary name if you want to give a custom name to your container 
 40  docker container run -p 84:80 -d --name webhost nginx
   41  docker ps
#############lets check the logs of your container also 
45  curl localhost:84
   46  docker logs webhost
#container vs process id 
#lets create the docker container with mongo
 55  docker run --name mongo -d mongo
   56  docker ps
#the top command will show that mongo db is running with a process id
   57  docker top mongo
#ps aux is the linux command used to check all the process id in your linux system
   58  ps aux
#check the mongo db process id match with the ps aux command
   59  docker top mongo
   60  docker ps
#change the process id to your mongo db porocess id and kill it 
   61  kill -9 10258
#once you kill it the container will be shown in exit status
   62  docker ps -a
#if you want to start your container again start
   63  docker start mongo
   64  docker ps
#if you want to stop your container again
   65  docker stop mongo
#lets create a mysql container and login inside the container
 72  docker run -d -p 3306:3306 --name db -e MYSQL_ROOT_PASSWORD=admin123 mysql
##docker ps will show an mysql container is running
   73  docker ps
#login inside the container doocker exec -iy interatice termial bash 
   74  docker exec -it db bash
mysql -u root -p
##put the password as admin123
#lets see we can create a database 
show databases;
create database employee;
#this will show the employee database is created or not 
show databases;
##lets exit mysql and exit the container
exit
exit
################
#how to delete a container
  78  docker rm db
#this will not delete the container to delete the same you need to stop it 
   79  docker stop db
   80  docker rm db
#volumes in container persistent volume to create custom volume -v 
84  docker run -d -p 3306:3306 --name db -e MYSQL_ROOT_PASSWORD=admin123 -v db:/var/lib/mysql mysql
mysql -u root -p
exit
exit
   85  docker ps
#docker volume ls will give the path 
 86  docker volume ls
#to know more about a container 
   87  docker inspect db
#if i do inspect in the volume you can see the db bath where it is storing your data
   89  docker volume inspect db



